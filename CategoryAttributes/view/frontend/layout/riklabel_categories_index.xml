<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" layout="1column" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceBlock name="page.main.title">
            <action method="setPageTitle">
                <argument translate="true" name="title" xsi:type="string">All categories</argument>
            </action>
        </referenceBlock>
        <referenceContainer name="content">
            <block class="AimsCoder\CategoryAttributes\Block\Categories" name="all_categories" template="AimsCoder_CategoryAttributes::allcategories.phtml">
            </block>
        </referenceContainer>

    </body>
</page>
